{
  "name": "capybara-chat",
  "version": "0.1.0",
  "private": true,
  "description": "Standalone AI chat application with multi-backend CLI support",
  "scripts": {
    "build": "pnpm --filter @capybara-chat/types build && pnpm -r build",
    "build:watch": "pnpm -r --parallel build:watch",
    "dev": "docker compose -f docker/compose.yaml -f docker/compose.dev.yaml up",
    "dev:build": "docker compose -f docker/compose.yaml -f docker/compose.dev.yaml up --build",
    "dev:down": "docker compose -f docker/compose.yaml -f docker/compose.dev.yaml down",
    "dev:local": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "vitest": "3.1.4",
      "@vitest/coverage-v8": "3.1.4"
    }
  }
}