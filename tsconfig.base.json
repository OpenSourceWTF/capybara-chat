{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@capybara-chat/types": [
        "./packages/types/src"
      ],
      "@capybara-chat/agent-sdk": [
        "./packages/agent-sdk/src"
      ],
      "@capybara-chat/cli-provider": [
        "./packages/cli-provider/src/index.ts"
      ],
      "@capybara-chat/chat-core": [
        "./packages/chat-core/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}